    <!-- === Комментарий === -->
    <author>VLMADev</author>
    <description>Тема оформления для VS Code</description>

    <!-- === Свойства === -->
    <properties>
        <property name="background">#1e1e2f</property>
        <property name="textColor">#ffffff</property>
